<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Download Audio!"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_40"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_25"
            android:src="@drawable/headphone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16"
            android:layout_marginBottom="@dimen/dimen_40"
            android:textStyle="bold"
            android:text="Enjoy listening to youtube audio"/>


        <EditText
            android:id="@+id/edtLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/dimen_16"
            android:drawableRight="@drawable/ic_baseline_content_paste_24"
            android:backgroundTint="@color/line_edit"
            android:theme="@style/SearchViewTheme"
            android:hint="Add link youtube to download audio"/>


        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:text="Download"
            android:paddingHorizontal="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn"/>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>