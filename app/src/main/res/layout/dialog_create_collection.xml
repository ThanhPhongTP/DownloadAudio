<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Collection"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edit_create_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/line_edit"
            android:theme="@style/SearchViewTheme"
            android:textSize="16sp"
            android:hint="Please fill out new name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnCancel_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/dimen_25"
                android:text="cancel"/>

            <TextView
                android:id="@+id/btnDone_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btnDone"
                android:textSize="16sp"
                android:text="Done" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>